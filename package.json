{
  "name": "@mckabue/react-validate",
  "version": "2.0.0",
  "description": "A lightweight, flexible, and type-safe React form validation hook with zero dependencies (except React)",
  "keywords": [
    "react",
    "validation",
    "form",
    "hook",
    "typescript",
    "zod",
    "yup",
    "schema"
  ],
  "author": "Kabui Charles",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mckabue/validate-hook.git"
  },
  "bugs": {
    "url": "https://github.com/mckabue/validate-hook/issues"
  },
  "homepage": "https://github.com/mckabue/validate-hook#readme",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prepublishOnly": "pnpm clean && pnpm build && pnpm test",
    "dev": "pnpm build:watch"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^14.2.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.45",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "terser": "^5.44.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.13.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0",
    "zod": "^4.2.1"
  }
}
